<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_5sdp">
        <ImageView
            android:id="@+id/iv_coment_person"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_45sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:background="@drawable/comment_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_coment_person"
                        style="@style/bigtext_black"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_3sdp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_comment"
                        style="@style/small_black"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_3sdp"
                        android:text="" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_comment_like"
                            style="@style/small_grey"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Like" />

                        <TextView
                            android:id="@+id/tv_comment_like_red"
                            style="@style/small_appcolor"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Like"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_comment_reply"
                        style="@style/small_grey"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:clickable="true"
                        android:text="Reply" />

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:src="@drawable/like_red" />

                    <TextView
                        android:id="@+id/tv_no_of_like"
                        style="@style/small_black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_reply_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_view_reply"
                        style="@style/bigtext_black"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_3sdp"
                        android:text="View 4 replies" />
                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v4.widget.CircleImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/coverphoto" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/bigtext_black"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:padding="@dimen/_3sdp"
                            android:text="" />

                        <TextView
                            style="@style/small_black"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:padding="@dimen/_3sdp"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>-->
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete_comment"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/dot_black" />
</RelativeLayout>