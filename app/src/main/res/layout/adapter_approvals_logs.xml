<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_approvalsname"
                style="@style/very_small_black"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_event_date"
                style="@style/very_small_black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text=""
                android:textColor="@color/view_grey" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_log_title"
                style="@style/very_small_black"
                android:layout_marginTop="@dimen/_3sdp"
                android:text=""
                android:textColor="@color/view_grey" />

            <TextView
                android:id="@+id/tv_log_request_sent_to"
                style="@style/very_small_black"
                android:layout_marginTop="@dimen/_3sdp"
                android:text=""
                android:layout_marginLeft="@dimen/_5sdp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnyellowback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEF9C8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_note_by"
                style="@style/very_small_black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_note_description"
                style="@style/very_small_black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text=""
                android:textColor="@color/view_grey" />

            <TextView
                android:id="@+id/tv_filepath"
                style="@style/very_small_black"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text=""
                android:textColor="@color/view_grey" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/black"></View>
    </LinearLayout>

</LinearLayout>