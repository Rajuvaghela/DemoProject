<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey2"
    android:gravity="center"
    android:layout_margin="@dimen/_30sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"

        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/appcolor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/title"
                    style="@style/big_white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:text="Add Your Folder"/>
                <TextView
                    android:id="@+id/tv_rename_title"
                    style="@style/big_white"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:text="Rename"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/mr_dialog_close_light" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/et_border"
                android:gravity="center"
                android:orientation="vertical">

               <EditText
                   android:id="@+id/edt_groupname"
                   style="@style/edittext_big"
                   android:hint="Enter Folder Name"
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:background="@null" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/btn_save"
                android:text="Save"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>