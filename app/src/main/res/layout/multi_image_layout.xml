    <LinearLayout
        android:id="@+id/ll_image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/border_line"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_22"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/border_line"
            android:scaleType="fitXY" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_image3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv31"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_180sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_32"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_33"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_image4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_41"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_42"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_43"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv44"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_image5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_51"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_52"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_53"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_54"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_55"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_image6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_61"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY"
                android:src="@drawable/coverphoto" />

            <ImageView
                android:id="@+id/iv_62"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY"
                android:src="@drawable/coverphoto" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_63"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY"
                android:src="@drawable/coverphoto" />

            <ImageView
                android:id="@+id/iv_64"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:scaleType="fitXY"
                android:src="@drawable/coverphoto" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/border_line"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_65"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/coverphoto" />

                <TextView
                    android:id="@+id/tv_more_number_of_image"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="3 more image"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
