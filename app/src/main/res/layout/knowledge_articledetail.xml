    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    android:visibility="visible"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv2"
            style="@style/bigtext_black"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="HR Manual" />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/right_arrow_black"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv3"
            style="@style/bigtext_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="Introducation to Adarsh" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/background"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnfblike1"
                        android:layout_width="0dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/fblikegrey"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/fb2"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/fbLikered"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/like_red"
                                android:visibility="gone" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv7"
                            style="@style/small1_grey"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="LIKE" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lncomment"
                        android:layout_width="0dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/fb3" />

                        <TextView
                            android:id="@+id/tv8"
                            style="@style/small1_grey"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="COMMENTS" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/share1"
                        android:layout_width="0dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/fb1" />

                        <TextView
                            android:id="@+id/tv9"
                            style="@style/small1_grey"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="SHARE" />

                    </LinearLayout>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rv_comment_list"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

