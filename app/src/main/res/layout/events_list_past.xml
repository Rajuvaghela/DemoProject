<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewEvent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:scaleType="fitXY" />


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/appcolor"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp">


                    <TextView
                        android:id="@+id/txt_private"
                        style="@style/very_small_white"
                        android:text="Private" />

                </LinearLayout>

               <!-- <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_5sdp">-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/appcolor"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_month"
                            style="@style/bigtext_white"
                            android:text="Aug">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txt_date"
                            style="@style/bigtext_black"
                            android:text="25">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

               <!-- </android.support.v7.widget.CardView>-->


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_eventTitle"
                        style="@style/bigtext_black"
                        android:text="Dinner at The grand Bhagwati" />

                    <TextView
                        android:id="@+id/txt_eventInfo"
                        style="@style/small_black"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Sunday at 4:00 P.M." />

                    <TextView
                        android:id="@+id/txt_eventplace"
                        style="@style/small_black"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="at, Cafe piano, Ahmedabad" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:visibility="gone"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/myevent_option"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:visibility="gone"
                        android:background="@drawable/menu_appcolor" />
                </LinearLayout>
            </LinearLayout>

            <!--  <LinearLayout
                  android:layout_width="match_parent"
