<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_90sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@color/login_grey"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/login_logo1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/login_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp">

                            <EditText
                                android:id="@+id/edt_username"
                                style="@style/edittext_big"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:hint="User Name"
                                android:imeOptions="actionNext"
                                android:singleLine="true" />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/login_email"
                                android:imeOptions="actionDone"
                                android:singleLine="true" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv1"
                            style="@style/small_grey"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Enter Your Mail ID " />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp">

                            <EditText
                                android:id="@+id/edt_password"
                                style="@style/edittext_big"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:hint="Password"
                                android:inputType="textPassword" />

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/login_passwod" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv2"
                            style="@style/small_grey"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Enter Your Password " />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <LinearLayout
                            android:id="@+id/lnlogin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv3"
                                style="@style/small_different"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="LOGIN" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_register"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/lnlogin"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt_reg"
                                style="@style/small_blue"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="REGISTER" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lnforgot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv4"
                                style="@style/small_appcolor"
                                android:layout_gravity="right|center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="FORGOTTEN PASSWORD?" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/appcolor"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/login_logo_2" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>